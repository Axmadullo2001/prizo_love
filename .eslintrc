{
  "extends": [
    "react-app",
    "react-app/jest"
  ],

  "rules": {
    "no-console": "warn",
    "prefer-const": "error",
    "quotes": ["error", "single"],
    "jsx-quotes": ["error", "prefer-double"],
    "indent": ["warn", 2],
    "max-len": ["warn", {"code": 1020}],
    "comma-dangle": ["error", "always-multiline"],
    "semi": ["warn", "never"],
    "import/order": ["error", {
      "newlines-between": "always",
      "groups": [
        "builtin",
        "external",
        "internal",
        "parent",
        "sibling",
        "index",
        "object",
        "type"
      ]
    }]

  }
}
